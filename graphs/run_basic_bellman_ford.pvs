run_basic_bellman_ford: THEORY
BEGIN

  IMPORTING basic_bellman_ford[3]

  s(x:V): extended_nnreal = IF x=0 THEN 0 ELSE 2 ENDIF
  u(x:V): extended_nnreal = IF x=2 THEN 0 ELSE inf  ENDIF
  v(x:V): extended_nnreal = IF x=1 THEN 0 ELSE inf  ENDIF

  G(x:V): [V-> extended_nnreal] = IF x=0 THEN s ELSIF x=1 THEN u ELSE v ENDIF

END run_basic_bellman_ford
