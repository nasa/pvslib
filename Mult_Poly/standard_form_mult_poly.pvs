  FORALL(p:MultPoly |cons?(p)):
  LET P = lft(p)(max_length(p))
  IN
  (EXISTS(j: below(length(p))): cons?(nth(p,j)`alpha) AND
  length(nth(p,j)`alpha) = max_length(p)
  AND last(nth(p,j)`alpha) /= 0) IMPLIES minlength?(P)

