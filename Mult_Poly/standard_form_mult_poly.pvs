 nth( (: 0 :) ^ n , i) = 0

cutting_cdr: LEMMA
 FORALL(l1:list[nat]):
 (cons?(cutting(l1)) AND
 cons?(l1)) IMPLIES
 cutting(cdr(l1)) = cdr(cutting(l1))

cutting_append_length: LEMMA
 FORALL(l1,l2:list[nat], n,m:nat):
 (length(l1) = length(l2) AND
 append(cutting(l1), (: 0 :) ^ n ) =
 append(cutting(l2), (: 0 :) ^ m))
 IMPLIES
 length(cutting(l1)) = length(cutting(l2))

